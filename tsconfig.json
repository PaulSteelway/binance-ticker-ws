{
    "compilerOptions": {
      "target": "ES2021",         
      "module": "CommonJS",       
      "outDir": "./dist",         
      "rootDir": "./src",         
      "strict": true,             
      "esModuleInterop": true,    
      "skipLibCheck": true,       
      "forceConsistentCasingInFileNames": true, 
      "moduleResolution": "node", 
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "types": ["node", "jest"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  